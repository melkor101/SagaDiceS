{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "useUnknownInCatchVariables": false,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es6", "es7", "es2017.object"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": "./src",
    "paths": {
      "components": ["./components"],
      "containers": ["./containers"],
      "translations": ["./translations"],
      "screens": ["src/screens"],
      "context": ["./context"],
      "assets": ["../assets"],
      "config": ["./config.ts"],
      "theming": ["./theming.tsx"],
      "navigation": ["./navigation"],
      "features": ["./features"],
      "hooks": ["./hooks"],
      "types": ["./types.ts"]
    }
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
